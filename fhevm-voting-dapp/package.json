{
  "name": "fhevm-voting-dapp",
  "version": "1.0.0",
  "description": "A privacy-preserving voting DApp using FHEVM",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:zama": "hardhat run scripts/deploy.js --network zama",
